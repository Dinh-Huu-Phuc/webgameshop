@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng Xuất";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
    }

    .video-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        z-index: -1;
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(2px);
        z-index: 0;
    }

    .logout-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: #fff;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.6);
        text-align: center;
        position: relative;
        z-index: 1;
    }

        .logout-container h1 {
            font-size: 48px;
            margin-bottom: 24px;
        }

        .logout-container form button {
            background: silver;
            color: black;
            border: none;
            padding: 12px 28px;
            border-radius: 8px;
            font-size: 18px;
            cursor: pointer;
            transition: 0.3s;
        }

            .logout-container form button:hover {
                background: black;
                color: white;
            }
</style>

<!-- Video nền -->
<video autoplay muted loop playsinline class="video-bg">
    <source src="/assets/images/blackmythwukong.mp4" type="video/mp4" />
    Trình duyệt của bạn không hỗ trợ video.
</video>

<!-- Lớp mờ overlay -->
<div class="overlay"></div>

<div class="logout-container">
    <h1>@ViewData["Title"]</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit">Bấm Vào Đây Để Đăng Xuất</button>
        </form>
    }
    else
    {
        <p>You have successfully logged out of the application.</p>
    }
</div>
