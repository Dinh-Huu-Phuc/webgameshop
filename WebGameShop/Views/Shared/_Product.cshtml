<div class="row mt-4" style="background: #171a21;">
    @foreach (var item in Model)
    {
        <div class="item features-image сol-12 col-md-6 col-lg-4" style="background-color: #171a21;">
            <div class="item-wrapper">
                <div class="item-img">
                    <img src="@item.ImageUrl" alt="Coffee Shop" title="">
                </div>
                <div class="item-content" style="background-color: #171a21">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id"
                       target="_self">
                        <h6 class="item-subtitle mbr-fonts-style mt-1 display-7">
                            <strong style="color: white !important;">@item.Name</strong>
                        </h6>
                    </a>
                    <p class="mbr-text mbr-fonts-style mt-3 display-7" style="color: white !important"> @item.Price.ToString("C")</p>
                </div>
                <div class="mbr-section-btn item-footer mt-2" style="background-color:#171a21;">
                    <a asp-controller="Shoppingcart" asp-action="AddToShoppingCart" asp-route-pId="@item.Id" class="btn item-btn btn-primary display-4" target="_self" style="background-color: #171a21 !important; border: 1px solid aqua !important; border-radius: 20px;">
                        <span class="mbrib-cart-add mbr-iconfont mbr-iconfont-btn">Thêm Vào Giỏ Hàng&nbsp;</span>
                    </a>
                </div>
            </div>
        </div>
    }
</div>