@model Order
<style>
    .video-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        z-index: -1;
    }

    .form-container {
        position: relative;
        z-index: 1;
        background-color: rgba(23, 26, 33, 0.5);
        padding: 40px 20px;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .form-content {
        max-width: 500px;
        width: 100%;
        color: white;
        text-align: center;
    }

        .form-content label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
        }

        .form-content .form-group {
            margin-bottom: 15px;
        }

        .form-content input.form-control {
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 50px;
            transition: background-color 0.3s ease;
            padding: 10px 20px;
        }

            .form-content input.form-control::placeholder {
                color: rgba(255, 255, 255, 0.6);
            }

            .form-content input.form-control:focus {
                background-color: rgba(255, 255, 255, 0.3);
                color: white;
                border-color: #e53935;
                outline: none;
            }

    .btn-submit {
        width: 100%;
        font-weight: 600;
        margin-top: 20px;
        background-color: rgba(229, 57, 53, 0.8);
        border: none;
        color: white;
        border-radius: 50px;
        padding: 12px 0;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #e53935;
        }
</style>

<video autoplay muted loop playsinline class="video-bg">
    <source src="/assets/images/blackmythwukong.mp4" type="video/mp4" />
    Trình duyệt của bạn không hỗ trợ video.
</video>

<form asp-action="Checkout" method="post" role="form" class="form-container">
    <div class="form-content">
        <h3 style="margin-bottom: 30px; font-weight: 800;">
            Nhập Thông Tin Để Nhận File Tải Game!
        </h3>

        <div class="form-group">
            <label asp-for="FirstName">Nhập Tên</label>
            <input asp-for="FirstName" placeholder="Nhập tên của bạn" type="text" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Họ Của Bạn</label>
            <input asp-for="LastName" placeholder="Nhập Họ Của Bạn" type="text" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Email">Nhập Email</label>
            <input asp-for="Email" placeholder="Nhập Email của bạn" type="email" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Phone">SĐT</label>
            <input asp-for="Phone" placeholder="SĐT của bạn" type="tel" class="form-control" required>
        </div>

        <div class="form-group">
            <label asp-for="Address">Địa Chỉ</label>
            <input asp-for="Address" placeholder="nhập địa chỉ của bạn" type="text" class="form-control" required>
        </div>

        <button type="submit" class="btn-submit">
            Đặt hàng Ngay
        </button>
    </div>
</form>
